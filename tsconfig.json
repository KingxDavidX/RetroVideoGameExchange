{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,

    // ChatGPT assisted with TypeScript compiler configuration
    // for decorator metadata and JSON module imports
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
}
